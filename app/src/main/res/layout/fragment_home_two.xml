<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools=" http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.lecz.clubdelosvencedores.general.MainActivity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/name_user"
            android:text="name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/level"
            android:text="Nivel: Aspirante"
            android:layout_below="@+id/name_user"
            android:layout_centerHorizontal="true" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:context="com.lecz.clubdelosvencedores.general.MainActivity"

            android:layout_below="@+id/level"
            android:id="@+id/relativeLayout">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="150dp"

                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2"
                android:layout_alignParentTop="true">



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"

                    android:layout_weight="5">

                    <com.lecz.clubdelosvencedores.OldWestTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="days"
                        android:textSize="40dp"
                        customAttrs:customFont="roboto_thin"
                        android:textColor="@color/yellow"
                        android:id="@+id/days"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="@string/days_to_quit"
                        android:id="@+id/asasa"
                        android:gravity="center"
                        android:layout_below="@+id/days"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"

                    android:layout_weight="6">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_user_home"
                        android:scaleType="fitEnd"

                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="35dp"
                        android:text="money"
                        android:textColor="@color/yellow"
                        android:gravity="center"
                        android:id="@+id/money"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="Ahorrados"
                        android:id="@+id/textView5"
                        android:layout_below="@+id/money"
                        android:layout_centerHorizontal="true" />


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>



        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listActivity"
            android:background="#ffebebeb"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:layout_below="@+id/relativeLayout2" />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/relativeLayout"
            android:id="@+id/relativeLayout2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_cigarette_ly"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Fumé"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:id="@+id/add_cigarette"
                android:layout_gravity="right|bottom"
                android:src="@drawable/checkmark"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:text="20"
                android:id="@+id/textView4"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/limite"
                android:layout_alignTop="@+id/limite" />

            <com.lecz.clubdelosvencedores.OldWestTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Límite:"
                android:id="@+id/limite"
                customAttrs:customFont="roboto_thin"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <com.lecz.clubdelosvencedores.OldWestTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fumados"
                android:layout_marginRight="10dp"
                customAttrs:customFont="roboto_thin"
                android:id="@+id/textViews22"
                android:layout_alignTop="@+id/textView4"
                android:layout_toEndOf="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView22"
                android:layout_toEndOf="@+id/textView22"
                android:layout_alignTop="@+id/textViews22"
                android:layout_toStartOf="@+id/add_cigarette" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="12"
                android:id="@+id/cigarettes_smoked"
                android:layout_alignTop="@+id/textViews22"
                android:layout_toEndOf="@+id/textViews22" />
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/list_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout" />

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/add_button_margin"
        android:src="@drawable/plus_test"/>

</FrameLayout>