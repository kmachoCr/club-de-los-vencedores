<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActiosnBar</item>
        <!-- <item name="android:actionBarTabStyle">@style/MyActionBarsTabBar</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActiosnBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">#D85122</item>
    </style>
    <style name="MyActionBarsTabBar" parent="android:Widget.ActionBar.TabBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="SelectTab" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>
</resources>