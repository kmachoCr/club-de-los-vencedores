<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lecz.clubdelosvencedores.ScoreGameActivity">

    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        customAttrs:customFont="futura_bold"
        android:textColor="@color/blue_score"
        android:text="3452"
        android:background="@drawable/icn_textura_puntaje"
        android:id="@+id/score"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        customAttrs:customFont="futura_heavy"
        android:textColor="@color/blue_title"
        android:textSize="30sp"
        android:text="TU PUNTUACIÃ“N"

        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        customAttrs:customFont="futura_heavy"
        android:textColor="@color/blue_title"
        android:textSize="30sp"
        android:text="NIVEL: "
        android:id="@+id/as"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true" />

    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        customAttrs:customFont="futura_heavy"
        android:textColor="@color/blue_score"
        android:textSize="30sp"
        android:text="6"
        android:id="@+id/level_game"
        android:layout_alignTop="@+id/as"
        android:layout_toEndOf="@+id/as" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUGAR OTRA VEZ"
        android:id="@+id/play_again"
        android:layout_marginTop="19dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="23dp"
        android:background="@drawable/start_game"
        android:textColor="@android:color/white"
        android:layout_above="@+id/add_button"
        android:layout_alignParentStart="true" />

    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        customAttrs:customFont="futura_heavy"
        android:textColor="@color/blue_title"
        android:textSize="23dp"
        android:text="MEJOR PUNTAJE: 5670"
        android:id="@+id/max_score"
        android:layout_above="@+id/play_again"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/score_game"
        android:src="@drawable/checkmark"
        android:layout_below="@+id/level_game"
        android:layout_toStartOf="@+id/max_score"
        android:layout_above="@+id/max_score"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_marginTop="8dp"
        android:id="@+id/add_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ayuda"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
